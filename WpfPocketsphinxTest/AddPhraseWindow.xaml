<Window x:Class="WpfPocketsphinxTest.AddPhraseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPocketsphinxTest"
        mc:Ignorable="d"
        Title="AddPhraseWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="AddPhraseBox" HorizontalAlignment="Left" Height="50" Margin="317,158,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="371" FontFamily="OCR A Extended" FontSize="16" TextChanged="addPhraseBox_TextChanged"/>
        <Button x:Name="recBtn" Content="Record" HorizontalAlignment="Left" Margin="404,93,0,0" VerticalAlignment="Top" Width="180" Height="45" FontFamily="OCR A Extended" FontSize="22"/>
        <Button x:Name="returnBtn" Content="Return" HorizontalAlignment="Left" Margin="668,355,0,0" VerticalAlignment="Top" Width="100" Height="40" FontFamily="OCR A Extended" FontSize="16"/>
        <Image x:Name="indicatorImg" HorizontalAlignment="Left" Height="40" Margin="638,93,0,0" VerticalAlignment="Top" Width="50" OverridesDefaultStyle="True" Source="indicatorBtnPic2.png"/>
        <Image HorizontalAlignment="Left" Height="375" Margin="20,20,0,0" VerticalAlignment="Top" Width="279" Source="indicatorInfoPic.png"/>

    </Grid>
</Window>
